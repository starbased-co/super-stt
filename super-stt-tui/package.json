{
  "name": "super-stt-tui",
  "version": "0.1.0",
  "description": "Terminal UI client for Super STT speech-to-text daemon",
  "main": "dist/index.js",
  "type": "module",
  "napi": {
    "binaryName": "super-stt-tui-native",
    "targets": [
      "x86_64-unknown-linux-gnu"
    ]
  },
  "scripts": {
    "build:native": "napi build --platform --release --manifest-path native/Cargo.toml --output-dir .",
    "build:native:debug": "napi build --platform --manifest-path native/Cargo.toml --output-dir .",
    "dev": "tsx src/index.tsx",
    "build": "pnpm build:native && tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "stt",
    "speech-to-text",
    "tui",
    "terminal",
    "ink",
    "react"
  ],
  "author": "starbased",
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@types/react": "^19.2.2",
    "ink": "^6.3.1",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.3.1",
    "@types/node": "^24.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}